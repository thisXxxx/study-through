<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.weilai.studythrough.mapper.UserMapper">

    <select id="selectUsers" resultType="team.weilai.studythrough.pojo.vo.UserVO">
        select user_id,
               stu_class,
               name,
               username,
               email,
               sex,
               status
        from st_user
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
</mapper>
