<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.weilai.studythrough.mapper.MessageMapper">

    <select id="selectChat" resultType="team.weilai.studythrough.pojo.vo.MessageVO">
        select m.message_id,
               m.message_text,
               u.name,
               u.username,
               m.create_time
        from message m
        join user u on u.user_id = m.from_user
        where m.lesson_id = #{lessonId}
    </select>
</mapper>
