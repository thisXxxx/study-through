<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.weilai.studythrough.mapper.LessonMapper">

    <select id="selectLesson" resultType="team.weilai.studythrough.pojo.VO.LessonVO">
        select lesson_id,
               lesson_name,
               cover_url,
               end_time,
               create_time
        from lesson
        <where>
            <if test="name != null and name != ''">
                lesson_name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
</mapper>
