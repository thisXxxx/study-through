<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.weilai.studythrough.mapper.LessonMapper">

    <select id="selectLesson" resultType="team.weilai.studythrough.pojo.vo.LessonVO">
        select lesson_id,
               lesson_name,
               cover_url,
               end_time,
               create_time
        from st_lesson
        <where>
            <if test="name != null and name != ''">
                lesson_name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
    <select id="selectLes" resultType="team.weilai.studythrough.pojo.vo.LessonGetVO">
        select l.lesson_name,
               l.cover_url,
               l.end_time,
               l.create_time,
               u.name
        from st_lesson l
        join st_user u on u.user_id = l.user_id
        where l.lesson_id = #{lessonId}
    </select>
</mapper>
